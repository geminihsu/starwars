<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_user_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="@dimen/default_text_address_host_size_sp"
            android:text="@string/character_name"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/txt_user_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:paddingLeft="20dp"
            android:editable="false"
            android:textSize="@dimen/default_text_address_host_size_sp"
            android:text="123"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_title_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="@dimen/default_text_address_host_size_sp"
            android:text="@string/character_height"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/txt_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:paddingLeft="20dp"
            android:editable="false"
            android:textSize="@dimen/default_text_address_host_size_sp"
            android:text="123"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_title_hair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="@dimen/default_text_address_host_size_sp"
            android:text="@string/character_hair_color"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/txt_hair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:paddingLeft="20dp"
            android:editable="false"
            android:textSize="@dimen/default_text_address_host_size_sp"
            android:text="123"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_skin_color_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="@dimen/default_text_address_host_size_sp"
            android:text="@string/character_skin_color"
            android:textStyle="bold"
            />
    <EditText
        android:id="@+id/txt_skin_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:paddingLeft="20dp"
        android:editable="false"
        android:textSize="@dimen/default_text_address_host_size_sp"
        android:text="123"
        android:textStyle="bold"/>

    </LinearLayout>
    <Button
        android:id="@+id/movie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/btn_bouns_record"
        android:text="Movie"/>

</LinearLayout>

</ScrollView>
</layout>